function phone_field_move_focus(){
	$('#myPhone_1').keyup(function(){
		if($('#myPhone_1').val().length >= 3){
			$('#myPhone_2').focus();
		}
	});
	$('#myPhone_2').keyup(function(){
		if($('#myPhone_2').val().length >= 4){
			$('#myPhone_3').focus();
		}
	});
	$('#myPhone_3').keyup(function(){
		if($('#myPhone_3').val().length >= 4){
			$('#momPhone_1').focus();
		}
	});
	$('#momPhone_1').keyup(function(){
		if($('#momPhone_1').val().length >= 3){
			$('#momPhone_2').focus();
		}
	});
	$('#momPhone_2').keyup(function(){
		if($('#momPhone_2').val().length >= 4){
			$('#momPhone_3').focus();
		}
	});
	$('#momPhone_3').keyup(function(){
		if($('#momPhone_3').val().length >= 4){
			$('#ta').focus();
		}
	});
}

function loadJsFile(filename){
    var fileref=document.createElement('script');
    fileref.setAttribute("type","text/javascript");
    fileref.setAttribute("src", filename);
    if(typeof fileref!="undefined"){
        document.getElementsByTagName("head")[0].appendChild(fileref);
    }

}


